<div class="row-fluid">

  <ul class="breadcrumb">
    <li><a href="#"><%= link_to @trip.title, trip_path(@trip) %> </a><span class="divider">/</span></li>
    <li class="active"><%= @question.title %></li>
  </ul>

</div>
<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid">
    <% if !notice.nil? %>
        <div id="notice" class="text-success"><%= notice %></div>
    <% end %>
      </div>
    <div class="row-fluid">

    <h1 class="span12"><%= @question.title %></h1>
    </div>
    <div class="row-fluid">
    <div class="lead span12"><%= @question.body %></div>
     </div>
    <div class="row-fluid">
    <ul class="unstyled">
      <%= render @question.answers %>
    </ul>
      </div>
    <div class="row-fluid">
      <h3>Answer your friend's question</h3>
    </div>
    <div class="row-fluid">
    <div class="span12"><%= render "answers/form" %></div>
      </div>
    <div class="span8">
      <%= link_to 'Edit', edit_trip_question_path(@trip, @question) %> |
      <%= link_to 'Back', trip_path(@trip) %>
    </div>
  </div>
  <div class="span4">
    <h3>Stuff related to Question</h3>

  </div>
</div>



