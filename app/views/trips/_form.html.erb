<%= form_for(@trip) do |f| %>
    <fieldset>
      <legend><%=locals[:form_title]%></legend>
    <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2 class="alert alert-error"><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li class="text-error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <%= f.label :title %>
    <%= f.text_field :title ,{:placeholder=>"Enter a trip title", :class=>"span5"} %>
    <span class="help-block">Enter a catchy title to attract help</span>


    <%= f.label :body %>
    <%= f.text_area :body,{:placeholder=>"Enter a description of your dream trip", :class=>"span5"} %>


    <label class="checkbox">
    <%= f.check_box :public,{:class=>"checkbox"}  %>  Publish
    </label>
    <span class="help-block">When you are ready to publish this out to the masses, check the publish</span>
  <div class="actions">
    <%= f.submit :class=>"btn btn-primary" %>
  </div>
    </fieldset>
<% end %>
